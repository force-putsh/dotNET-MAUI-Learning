<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Client_Rest_in_.net_MAUI.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="10"
            Padding="30,0"
            VerticalOptions="Center">
            <Label Text="Entrer le Mail"/>
            <Entry x:Name="txtEmail" Placeholder="Email" Keyboard="Email" />

            <Label Text="Enter password"/>
            <Entry x:Name="txtPassword" Placeholder="password" Keyboard="Text" IsPassword="True" />

            <Button
                x:Name="CounterBtn"
                Text="Get Storage"
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="OnCounterClicked"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="Center" />

            <ListView x:Name="listStorage"/>
            <Editor IsEnabled="False" x:Name="edit" HeightRequest="400" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
